<p>created album</p>
<div class="table-responsive">
<table class="table table-hover table-bordered">
	<tr class="bg-white">
		<th>
			<p>name</p>
		</th>
		<th>
			<p>description</p>
		</th>
		<th>
			<p>Pics</p>
		</th>
		<th>
			<p>Actions</p>
		</th>
	</tr>
	<tr>

		<td> 
			<p>	<%= @album.name %> </p>
		</td>
		<td>	
			<p> <%= @album.description %> </p>
		</td>
		<td>
			<% @album.pics.each do |p| %>
			   <a href=" <%= pic_path(p.id)  %> "><%=image_tag p.avatar.url(:thumb) %></a>

			 <% end %>
		</td>
		<td>
			<div class="btn-group">
				<%=link_to 'view',album_path(@album) , :class => 'btn btn-primary'%>
				<%=link_to 'edit',edit_album_path(@album) , :class => 'btn btn-success'%>
				<%=link_to 'delete', album_path(@album), :method => :delete , :class => 'btn btn-danger' %>
				<%= link_to "Add pic", new_pic_path, :class => 'btn btn-primary' %>
			</div>
		</td>
	</tr>
</table>
</div>

